<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>


<GridPane fx:id="root"  xmlns:fx="http://javafx.com/fxml/1"  fx:controller="fr.utbm.gl52.netbusmanager.controller.ScheduleEditorController">
	<VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
		<Button fx:id="generateAutomaticSchedule" text="Générer les horaires d'une ligne &#10;automatiquement" onAction="#openAutomaticLineSchedule" alignment="TOP_LEFT"  ></Button>
		<Button fx:id="modifyLineSchedule" text="Modifier les tableaux de marche d'une ligne" onAction="#openModifyLineSchedule"></Button>
		<Button fx:id="homeButton" text="Menu principal" onAction="#goBackToMainScreen"></Button>
	</VBox>
	
	<VBox fx:id="chooseVBox" GridPane.columnIndex="1" GridPane.rowIndex="0" visible="false">
		<Label text="Choisissez la ligne :"></Label>
		<ComboBox fx:id="lineComboBox"></ComboBox>
		<VBox alignment="BOTTOM_RIGHT">
			<Button fx:id="chooseLineButton" onAction="#onModifyButtonPressed" text="Modifier l'arrêt"></Button>
		</VBox>
	</VBox>




</GridPane>
